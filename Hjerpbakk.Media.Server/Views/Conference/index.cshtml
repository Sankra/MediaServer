@using Hjerpbakk.Media.Server.Model;
@using System.Collections.Generic;
<html>
    <head>
        <title>DIPS Conferences</title>
        <link rel="stylesheet" type ="text/css" href ="css/all.css" media ="screen" />
		<link rel="stylesheet" type ="text/css" href ="css/dips.css" media ="screen" />
    </head>
    <body>
        <h1>
            DIPS Conferences <img src="images/logo.png" align="right" height="75">
        </h1>
        <p>
        Oppsummering av hva dette er for noe...
		</p>
		@{var conferences = (IReadOnlyList<Conference>)ViewData["conferences"];}
		@if (conferences != null) {
            <table style="width:100%" id="internalActivities">
            <tr>
                <th align="right" style="width: 80px">Title</th>
                <th align="left">Description</th>
            </tr>         
            @for(var i = 0; i < conferences.Count; ++i) {
                <tr>
                    <td align="right" style="width: 80px"><a href="@("/hour/" + Uri.EscapeUriString(conferences[i].Name))">@conferences[i].Name</a></td>
                    <td>@conferences[i].Description</td>    
                </tr>
            }
            </table>
        }
		
    </body>
</html>