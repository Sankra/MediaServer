@using Hjerpbakk.Media.Server.Model;
@{var hourOfInterest = (HourOfInterest)ViewData["hourOfInterest"];}
<html>
    <head>
        <title>@hourOfInterest.Title</title>
		<meta name="description" content="@hourOfInterest.Description">
        <link rel="stylesheet" type ="text/css" href ="../../css/all.css" media ="screen" />
        <link rel="stylesheet" type ="text/css" href ="../../css/dips.css" media ="screen" />
    </head>
    <body>
        <h1>
            @hourOfInterest.Title
        </h1>
        <p>
        @hourOfInterest.Description
		</p>
        
        <video width="400" controls><source src="@hourOfInterest.VideoURL" type="video/mp4"></source></video>

        <object width="400" height="225" data="@(string.IsNullOrEmpty(hourOfInterest.SpeakerDeckURL) ? "../../SpeakerDeckNotFound.html" : hourOfInterest.SpeakerDeckURL)"></object>

        <p>
            <a href="../../">Back</a>
        </p>
    </body>
</html>